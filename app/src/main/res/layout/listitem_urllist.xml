<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="5dp">
    <LinearLayout
            android:id="@+id/ll_drawerList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/drawerlayout_listitem_background">
        <FrameLayout
                android:id="@+id/fl_drawer_icon_background"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/drawerlayout_listitem_icon_background">
            <TextView
                    android:id="@+id/tv_urlFirstText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="22dp"/>

        </FrameLayout>


        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/tv_strAddressName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="18dp"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>