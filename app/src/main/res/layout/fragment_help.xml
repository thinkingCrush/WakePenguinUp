<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

    <!--<ImageView
            android:id="@+id/iv_help"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_help_1"/>-->
    <view
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class = "androidx.viewpager.widget.ViewPager"
            android:id="@+id/vp_imageView"
            android:gravity="center"/>


    <RelativeLayout
            android:id="@+id/rl_floatingSkip"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom|right"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/background_floating_help">
        <TextView
                android:id="@+id/tv_floating_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="skip"
                android:textSize="16dp"
                android:visibility="visible"
                android:textColor="#ffffff" />


    </RelativeLayout>

    <me.relex.circleindicator.CircleIndicator
            android:id="@+id/ci_help"
            app:ci_drawable="@drawable/indicator_back"
            app:ci_height="4dp"
            app:ci_width="4dp"
            app:ci_margin="4dp"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="48dp"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>